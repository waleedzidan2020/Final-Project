

@{Layout="_Layout";}
@using Extrade.ViewModels;
@model VendorEditViewModel



<h1>Edit Vendor</h1>

<form method="post" enctype="multipart/form-data" asp-action="Update" asp-controller="Vendor" >


    

   <div class="form-group">
       <label>BrandNameAr</label>
       <input name="BrandNameAr" type="text" class="form-group" value="@Model.BrandNameAr"/>
   </div>
    <div class="form-group">
       <label>BrandNameEr</label>
       <input name="BrandNameEr" type="text" class="form-group" value="@Model.BrandNameEr" />
   </div>

   

   <div class="form-group">

       
    <label for="exampleFormControlFile1">Example file input</label>
    @foreach(var img in @Model.VendorImage){
    <input type="file" asp-for="ImageFile" class="form-control-file" id="exampleFormControlFile1" multiple value="@img">
    <input name="" type="text" class="form-group" value="@Model.VendorImage" />
    }
  </div>


    <div class="form-group">
       <input type="submit" class="form-group"/>
   </div>



</form>
