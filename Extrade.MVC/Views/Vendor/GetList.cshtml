
@using Extrade.ViewModels

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{Layout="_AdminLayout";}
@model List<VendorViewModel>
  <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                DataTable Example
                            </div>
                            <div class="card-body">
                                <table id="datatablesSimple">
                                    <thead>
                                        <tr>
                                          <th scope="col">ID</th>
                                          <th scope="col">Vendor Name</th>
                                          <th scope="col">Brand Arabic</th>
                                          <th scope="col">Brand English</th>
                                            <th scope="col">Email</th>
                                           <th scope="col">Remove</th>
                                           <th scope="col">Balance</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                      <th scope="col">ID</th>
                                      <th scope="col">Vendor Name</th>
                                      <th scope="col">Brand Arabic</th>
                                      <th scope="col">Brand English</th>
                                        <th scope="col">Email</th>
                                       <th scope="col">Remove</th>
                                            <th scope="col">Balance</th>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var p in Model)
    {
         <tr>
      <td>@p.UserID</td>
      <td>@p.NameAr</td>
      <td>@p.BrandNameAr</td>
      <td>@p.BrandNameEr</td>
      <td>@p.Email</td>
      <td>@if (@p.IsDeleted == true)
          {<a asp-action="SoftDelete" asp-controller="Vendor" 
          asp-route-Id="@p.UserID"
          class="btn btn-primary">Not Activate</a>
          }
          else {<a asp-action="SoftDelete" asp-controller="Vendor" 
          asp-route-Id="@p.UserID"
          class="btn btn-danger">Active</a>
          }
                    
                </td>
                  <td>@p.Balance</td>
    </tr>
        
    }
   
                                    
                                    </tbody>
                                </table>
                            </div>
                        </div>





