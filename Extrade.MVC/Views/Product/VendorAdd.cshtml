@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@using Extrade.ViewModels
@model ProductEditViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/vendoradd.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" integrity="sha384-rOA1PnstxnOBLzCLMcre8ybwbTmemjzdNlILg8O7z1lUkLXozs4DHonlDtnE7fpc" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
    <title>Add Product</title>
</head>
<body>
<div class="d-flex all ">
  <div class="border border-3 SideBar col-2">
        <div class="d-flex mt-3">
            <div>
              <img class="image" src="setting.png"/>
            </div>
            <div>
              <select class="select">
                <option value="volvo">EXTRADE</option>
                <option value="saab">Saab</option>
                <option value="opel">Opel</option>
                <option value="audi">Audi</option>
              </select>
              <p class="textobacity">More User Details</p>
            </div>
        </div>
        <div class="d-flex mt-2">
           <img class="image" src="dashboard.png"/>
        <div>
           <p class="select">Dashboard</p>
        </div>
        </div>
        <p class="title">DEDRIJF</p>
        <div class="d-flex mt-1">   
          <i class="icon fa fa-thin fa-user" ></i>
        <div>
          <p class="select">ADD PRODUCT</p>
        </div>
        </div>
        <div class="d-flex mt-2">
          <i class="icon fa fa-solid fa-hand-holding-medical"></i>
        <div>
           <p class="select">GET PRODUCT</p>
        </div>
        </div>

        <div class="d-flex mt-2 calanderdiv">
            <i class="calandericon fa fa-solid fa-calendar-day"></i>
        <div>
            <p class="select"> setting</p>
        </div>
        </div>
        
       
  </div> 
  <div class="col-8">
    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1"><i class="fa fa-light fa-magnifying-glass-arrow-right"></i></span>
      <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
      <span class="input-group-text" id="basic-addon2"><i class="fa fa-light fa-bell"></i></span>
    </div>
      <h1 class="mt-5 ms-5 ">VENDOR</h1>
      
      <div class="border-bottom"></div>
      <form asp-action="Add" asp-controller="Product" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label asp-for="NameEn" class="form-label">Name English</label>
          <input asp-for="NameEn" class="form-control input">
         
        </div>
        <div class="mb-3">
          <label asp-for="NameAr" class="form-label">Name Arabic</label>
          <input asp-for="NameAr" class="form-control input">
        </div>
        <div class="mb-3">
          <label asp-for="Description" class="form-label">Description</label>
          <input asp-for="Description" class="form-control input">
        </div>
        <div class="mb-3">
          <label asp-for="Price" class="form-label">Price</label>
          <input asp-for="Price" class="form-control input">
        </div>
        <div class="mb-3">
          <input asp-for="Quantity" class="form-control input">
          <label class="form-control input" asp-for="Quantity"> Quantity</label>
        </div>
        <div class="mb-3">
          <input asp-for="CategoryID" class="form-control input">
          <label class="form-control input" asp-for="CategoryID"> Category</label>
        </div>
        <div class="mb-3">
          <input asp-for="uploadedimg" class="form-control input">
          <label class="form-control" asp-for="uploadedimg">Image </label>
        </div>
        

        <input type="submit" class="btn btn-primary" value="ADD">
      </form>
      

  </div>
  

</div>
<script src="~/Content/user.js"></script>
</body>
</html> 