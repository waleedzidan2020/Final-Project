@model PaginingViewModel<List<ProductViewModel>>
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/VendorDashBoard.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" integrity="sha384-rOA1PnstxnOBLzCLMcre8ybwbTmemjzdNlILg8O7z1lUkLXozs4DHonlDtnE7fpc" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
    <title>USer</title>
</head>
<body>
<div class="d-flex all ">
  <div class="border border-3 SideBar col-2">
        <div class="d-flex mt-3">
            <div>
              <img class="image" src="setting.png"/>
            </div>
            <div>
              <p class="textobacity">Ex-Trade</p>
            </div>
        </div>
        <div class="d-flex mt-2">
           <img class="image" src="dashboard.png"/>
        <div>
           <p class="select">Dashboard</p>
        </div>
        </div>
        <p class="title">DEDRIJF</p>
        <div class="d-flex mt-1">   
          <i class="icon fa fa-thin fa-user" ></i>
        <div>
          <p class="select">ADD PRODUCT</p>
        </div>
        </div>
        <div class="d-flex mt-2">
          <i class="icon fa fa-solid fa-hand-holding-medical"></i>
        <div>
           <p class="select">GET PRODUCT</p>
        </div>
        </div>

        <div class="d-flex mt-2 calanderdiv">
            <i class="calandericon fa fa-solid fa-calendar-day"></i>
        <div>
            <p class="select"> setting</p>
        </div>
        </div>
        
       
  </div> 
  <div class="col-8">
    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1"><i class="fa fa-light fa-magnifying-glass-arrow-right"></i></span>
      <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
      <span class="input-group-text" id="basic-addon2"><i class="fa fa-light fa-bell"></i></span>
    </div>
      <h1 class="mt-5 ms-5 ">VENDOR</h1>
      
      <div class="border-bottom"></div>
    
      <table class="table">
        <thead>
          <tr>
            
            <th scope="col">product Name</th>
            <th scope="col">Price</th>
            <th scope="col">Category Name</th>
            <th scope="col">DESCRIPTION</th>
            <th scope="col">Quantity</th>
            <th scope="col">Edit</th> 
            <th scope="col">Delete</th> 
          </tr>
        </thead>
        <tbody>
                    @foreach (var p in Model.Data)
                    {
                        <tr>
                            <td>@p.NameEn</td>
                            <td>@p.Price</td>
                            <td>@p.Category</td>
                            <td>@p.Description</td>
                            <td>@p.Quantity</td>
                            <td><a asp-action="Update" asp-controller="Product" asp-route="@p.ID" >Edit</a></td>
                            <td><a asp-action="Delete" asp-controller="Product" asp-route="@p.ID" >Delete</a></td>

                        </tr>
                    }
                </tbody>
      </table>

  </div>
  <div class="border border-3 SideBar col-2">
     <div class="profile">
        <h6>Lolla mokhlis</h6>
        <img class="images"src="2.jpg"/>
     </div>
     <div class="pie animate no-round mt-5 mx-5 " style="--p:80;--c:orange;"> 80%</div>
     <canvas id="myChart" ></canvas>
     <div class="d-flex">
     <div class="card border-primary mb-3 cards " >
      <div class="card-header">user</div>
      <div class="card-body text-primary">
        <h5 class="card-title mx-4">6 </h5>
        <p class="card-text">  </p>
      </div>
  </div>
  <div class="card border-primary mb-3 cards " >
    <div class="card-header">client</div>
    <div class="card-body text-primary">
      <h5 class="card-title mx-4">6 </h5>
      <p class="card-text">  </p>
    </div>
</div>
</div>
<div class="d-flex">
